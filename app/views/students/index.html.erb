<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Fathername</th>
      <th>Schoolname</th>
      <th>Schoolclass</th>
      <th>Address</th>
      <th>Dateofbritgh</th>
      <th>Age</th>
      <th>Mobilephone</th>
      <th>Linephone</th>
      <th>Point</th>
      <th>Classroom</th>
      <th>Activities</th>
      <th>Teacher</th>
      <th>Attendings</th>
      <th>Memorizationparts</th>
      <th>Memorizationpage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %></td>
        <td><%= student.lname %></td>
        <td><%= student.fathername %></td>
        <td><%= student.schoolname %></td>
        <td><%= student.schoolclass %></td>
        <td><%= student.address %></td>
        <td><%= student.dateofbritgh %></td>
        <td><%= student.age %></td>
        <td><%= student.mobilephone %></td>
        <td><%= student.linephone %></td>
        <td><%= student.point %></td>
        <td><%= student.classroom %></td>
        <td><%= student.activities %></td>
        <td><%= student.teacher %></td>
        <td><%= student.attendings %></td>
        <td><%= student.memorizationparts %></td>
        <td><%= student.memorizationpage %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

